<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="Sample Question"
        android:textSize="40sp"
        android:background="@drawable/solid_color_shape"
        android:elevation="5sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:visibility="invisible"
        android:background="@drawable/solid_color_shape"
        android:elevation="5sp" />

    <ImageView
        android:id="@+id/addBtn"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:src="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/next"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/edit"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:src="@drawable/edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/answerOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Answer Option 1"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:background="@drawable/answer"
        android:layout_below="@id/flashcard_question"
        android:layout_toLeftOf="@id/next"
        android:elevation="5sp" />

    <TextView
        android:id="@+id/answerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Answer Option 2"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:background="@drawable/answer"
        android:layout_below="@id/answerOne"
        android:layout_toLeftOf="@id/next"
        android:elevation="5sp" />

    <TextView
        android:id="@+id/answerThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Answer Option 3"
        android:layout_margin="15dp"
        android:textSize="30dp"
        android:background="@drawable/answer"
        android:layout_below="@id/answerTwo"
        android:layout_toLeftOf="@id/next"
        android:elevation="5sp" />

    <ImageView
        android:id="@+id/eye"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:src="@drawable/eye"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/delete"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/delete"
        android:layout_below="@id/next"
        android:layout_alignParentRight="true" />

</RelativeLayout>